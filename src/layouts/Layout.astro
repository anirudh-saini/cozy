---
import "../styles/main.scss";
import Footer from "../components/Footer/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Cozy - The Casual Lounge isn't just a place to eat! It's a haven for relaxation and enjoyment, featuring comforting dishes with a touch of casual elegance, set in a warm and inviting atmosphere."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<title>{title}</title>
	</head>
	<body>
		<div>
			<main>
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
<style is:global></style>
