---
import styles from "./gallery.module.scss";

interface Props {
	images: string[];
}

const { images } = Astro.props;

const len = images.length;
let imgArr: string[][] = [];
const GROUP_SIZE = 3;

for (let i = 0; i < len; i++) {
	let tempArr: string[] = [];
	const LIMIT = i + GROUP_SIZE;

	for (i; i < len && i < LIMIT; i++) {
		tempArr.push(images[i]);
	}

	imgArr.push(tempArr);
}
---

<div class={`container ${styles.gallery}`}>
	{
		imgArr.map((images) => {
			return (
				<div class={styles.images}>
					{images.map((element) => (
						<img src={element} />
					))}
				</div>
			);
		})
	}
</div>
